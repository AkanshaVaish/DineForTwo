<h1>Log In</h1>

<!--Form needs some refactoring-->

<div class="row">
  <div class="col-md-6 col-md-offset-5">
    <%= form_tag sessions_path do %>
      <%= label_tag :name %>
      <br>
      <%= text_field_tag :name, params[:name] %>
      <br>
      <%= label_tag :password %>
      <br>
      <%= password_field_tag :password %>
      <br>
      <p class="button"> <%= submit_tag %> </p>
    <% end %>
  </div>
</div>

