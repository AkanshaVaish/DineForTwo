<header class="navbar navbar-inverse">
  <div class="container">
    <%= link_to "Dine for Two", root_path, id: "logo" %>
      <ul class="nav navbar-nav navbar-right">

        <% if logged_in? %>
          <li><%= link_to "Users", people_path %></li>
          <li><%= link_to "View Profile", current_user %></li>
          <li><%= link_to "Edit", edit_person_path(current_user) %></li>
          <li><%= link_to "Log Out", log_out_path, method: "delete" %></li>
        <% else %>
        <div class="form-inline">
          <%= form_for(:session, url: log_in_path) do |f| %>
            <div class="form-group">

              <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
            </div>
            <div class="form-group">

              <%= link_to "(forgot password)", new_password_reset_path %>
              <%= f.password_field :password, class: 'form-control' %>
            </div>
            <div class="checkbox">
              <%= f.label :remember_me do %>
                <%= f.check_box :remember_me %>
                <span> Remember me </span>
              <% end %>
            </div>
          <div class="form-group">
            <%= f.submit "Log in", class: "btn btn-default" %>
          </div>
          <% end %>
        </div>

        <% end %>
      </ul>
  </div>
</header>
