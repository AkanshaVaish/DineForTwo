<h1> Edit <%= @restaurant.name %> </h1>

<%= form_for :restaurant, url: restaurant_path(@restaurant), method: :patch do |f| %>
  <p>
    <%= f.label :name %> <br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :avatar, 'Restaurant Picture' %>
    <%= f.file_field :avatar %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= select_tag(:location_id, options_for_select(@locations), :prompt => "Select location.") %>
<%= link_to 'Back', restaurants_path %>
