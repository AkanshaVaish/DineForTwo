<h1> Viewing Restaurant <%= @restaurant.name %> </h1>
<div class="col-md-3">
  <div class="text-center">
    <%= image_tag(@restaurant.avatar, :size=> "250x250", :alt=> "profie_pic")%>
    <%= form_for(@restaurant) do |f| %>
      <%= f.label :avatar, 'Change picture' %>
      <%= f.file_field :avatar %>
      <%= f.submit "Change", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
<% if current_user %>
  <p>
    <%= link_to "favorite", favorite_restaurant_path(@restaurant,  type: "favorite"), method: :put %>
  </p>
  <p>
    <%= link_to "unfavorite", favorite_restaurant_path(@restaurant, type: "unfavorite"), method: :put %>
  </p>
<% end %>

<p> Hope you like the restaurant. </p>
<table>
  <tr> <th>Favorited by <th> </tr>
  <% @restaurant.favorite_restaurants.each do |favorite_restaurant| %>
    <tr>
      <td><%= favorite_restaurant.person.name %></td>
    </tr>
  <% end %>
</table>

<% if !current_user.location.blank? %>
  <%= link_to "View restaurants", location_path(current_user.location_id) %>
<% end %>

<p>
<%= link_to 'My profile', current_user %>
</p>
<p>
<%= link_to "Edit", edit_restaurant_path(@restaurant) %>
<p>
<p>
<%= link_to "Delete", restaurant_path(@restaurant), method: :delete,
              data: { confirm: 'Are you sure?' } %>
</p>
