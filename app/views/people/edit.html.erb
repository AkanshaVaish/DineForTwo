<% provide(:title, "Edit User") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@person) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, 'Confirmation'%>
      <%= f.password_field :password_confirmation, class: 'form-control' %>


      <%= f.label :gender, 'Male' %>
      <%= f.radio_button :gender, 'Male', :checked => true %>

      <%= f.label :gender, 'Female' %>
      <%= f.radio_button :gender, 'Female' %>


      <%= f.label :company, 'Company' %>
      <%= f.text_field :company, class: 'form-control' %>

      <%= f.label :address, 'Your City' %>
      <%= f.text_field :address, class: 'form-control' %>

      <%= f.label :bio, 'My Bio' %>
      <%= f.text_field :bio, class: 'form-control' %>

      <%= f.label :avatar, 'Profile Picture' %>
      <%= f.file_field :avatar %>

      <p>
        <%= select_tag(:location_id, options_for_select(@locations), :prompt => "Select location.")%>
      </p>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
