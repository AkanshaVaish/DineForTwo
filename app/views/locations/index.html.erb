<div class="container-fluid">
  <div class="text-center">
    <p id="notice"><%= notice %></p>

    <h1 class="titles">Listing Locations</h1>
  </div>
  <div class="text-center">
    <table class="table table-hover table-bordered">
      <thead>
        <tr>
          <th>Name</th><th></th><th></th>
        </tr>
      </thead>

      <tbody>
        <% @locations.each do |location| %>
          <tr>
            <td><%= link_to location.name, location %></td>
            <td><%= link_to 'New restaurant', new_restaurant_path %>
           
            
            <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
       <% end %>
      </tbody>
    </table>
  </div>
  <br>
<div class="text-center">
  <%= link_to 'New Location', new_location_path, class:"btn btn-primary", id:"user_buttons" %>
</div>
